RewriteEngine On
RewriteBase /ruben-barbearia/public/

# Handle API requests
RewriteRule ^api/booking(.*)$ api/booking.php [L,QSA]
RewriteRule ^api/bot(.*)$ ../modules/bot-widget/handler.php [L,QSA]

# Serve existing files directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Serve existing directories
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Default to index.php
RewriteRule ^ index.php [L]
